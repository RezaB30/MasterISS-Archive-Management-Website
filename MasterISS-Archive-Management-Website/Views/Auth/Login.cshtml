@model MasterISS_Archive_Management_Website.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    ViewBag.Title = MasterISS_Archive_Management_Website.Localization.Model.Login;
}
<style>

    .login-content {
        padding-top: 5em;
        max-width: 15em;
        margin: auto;
        /*background: white;*/
        text-align: center;
        /*   padding:1em;
        padding-top:2em*/
        color: var(--main-color);
        font-weight: 800;
        font-size: 1em
    }

        .login-content > div {
            margin-top: 1em;
        }

        .password{
            margin-top:2em;
            /*margin-left:3em*/
        }

    .search {
        color: black;
        font-weight: 600;
        font-size: 0.7em
    }
 /*   .mr{
        mar
    }*/
</style>


@ViewBag.HasNotPermission


<div class="login-content">

    @using (Html.BeginForm())
    {
        <div>
            @Html.DisplayNameFor(m => m.Username)
        </div>
        <div class="search">
            <div>
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "inputsearch" } })
            </div>
        </div>
        @Html.ValidationMessageFor(m => m.Username)

        <div>
            @Html.DisplayNameFor(m => m.Password)
        </div>
        <div class="search">
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "inputsearch" })
            </div>
        </div>
        @Html.ValidationMessageFor(m => m.Password)
        <div class="mr">
            <button class="button1 password" type="submit">@MasterISS_Archive_Management_Website.Localization.Model.Login</button>
        </div>

    }
    </div>
    


    <div>
        @Html.ValidationMessage("loginFailed")
    </div>
   
