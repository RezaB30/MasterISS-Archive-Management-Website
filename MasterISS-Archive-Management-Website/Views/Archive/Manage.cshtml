    <script>
        $('.clear-button').click(function () {
        
            var button = $(this);
            var uploadForm = button.closest('.upload-submit');
            var uploadFormInputName = uploadForm.find('.file-input-container');
            var uploadFormInputFiles = uploadFormInputName.find('input[type="file"]');
